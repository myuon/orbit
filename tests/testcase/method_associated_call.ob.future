type Counter = struct {
  value: int,

  fun increment(self: Counter) do
    self.value = self.value + 1;
  end

  fun get_value(self: Counter) do
    return self.value;
  end

  fun create_with_value(value: int) do
    return new Counter { .value = value };
  end
};

